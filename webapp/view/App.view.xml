<mvc:View
  controllerName="Glossary.controller.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.ui.layout.form"
  xmlns:core="sap.ui.core"
  xmlns:tnt="sap.tnt"
  xmlns="sap.m"
  id="MainView">
<App id="app">

    <tnt:ToolPage sideExpanded="{device>/system/phone}">

        <tnt:sideContent>
            <tnt:SideNavigation>

                <tnt:item>
                    <tnt:NavigationList id="navigationList">
                        <tnt:NavigationListItem
                                text="Tables"
                                icon="sap-icon://table-column">
                            <tnt:NavigationListItem text="Table 1">
                            </tnt:NavigationListItem>
                            <tnt:NavigationListItem text="Table 2">
                            </tnt:NavigationListItem>
                            <tnt:NavigationListItem text="Table 3">
                            </tnt:NavigationListItem>
                            <tnt:NavigationListItem text="Table 4">
                            </tnt:NavigationListItem>
                        </tnt:NavigationListItem>
                        <tnt:NavigationListItem
                                text="Account Settings"
                                icon="sap-icon://account">
                        </tnt:NavigationListItem>
                    </tnt:NavigationList>
                </tnt:item>
                <tnt:footer>
                    <tnt:NavigationList>
                        <tnt:NavigationListItem
                                text="Logout"
                                icon="sap-icon://account">
                        </tnt:NavigationListItem>
                    </tnt:NavigationList>
                </tnt:footer>

            </tnt:SideNavigation>
        </tnt:sideContent>
        <tnt:mainContents id="MainContent">
            <Page id="Login">
                <content visible="true">
                    <f:SimpleForm
                    	title="Login to your Account"
                    	editable="true"
                    	layout="ResponsiveGridLayout">
                    	<f:content>
                            <VBox alignItems="Center">
                                <Input
                                    id="LoginUsername"
                                    type="Text"
                                    placeholder="Enter Username..."/>
                                <Input
                                    id="LoginPassword"
                                    type="Password"
                                    placeholder="Enter Password..."/>
                                <Button
                                    icon="sap-icon://paper-plane"
                                    text="Login"
                                    width="11.5rem"
                                    type="Emphasized"
                                    press="onLoginSubmit"></Button>
                                <Link text="Not a Member? Register Now" press="openRegisterView"/>
                            </VBox>
                        </f:content>
                    </f:SimpleForm>
                </content>
            </Page>
            <Page id="Registration">
                <content visible="true">
                    <f:SimpleForm
                    	title="Create a new Account"
                    	editable="true"
                    	layout="ResponsiveGridLayout">
                    	<f:content>
                            <VBox alignItems="Center">
                                <Input
                                    id="RegisterUsername"
                                    type="Text"
                                    placeholder="Enter Username..."/>
                                <Input
                                    id="RegisterPassword"
                                    type="Password"
                                    placeholder="Enter Password..."/>
                                <Button
                                    icon="sap-icon://paper-plane"
                                    text="Register"
                                    width="11.5rem"
                                    type="Emphasized"
                                    press=""></Button>
                                <Link text="Already a Member? Login Now" press="openLoginView"/>
                            </VBox>
                        </f:content>
                    </f:SimpleForm>
                </content>
            </Page>
        </tnt:mainContents>

    </tnt:ToolPage>

</App>

</mvc:View>
