<mvc:View
    controllerName="com.glossary.controller.dialog.addWord"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">

    <Panel>

        <Label text="Word" labelFor="idWordInput"/>
        <Input id="idWordInput" placeholder="Enter Word ..." value="{/word}" 
            showSuggestion="true"
            suggest="onHandleSuggest"
            suggestionItems="{/words}">
            <suggestionItems>
                <core:Item text="Test" />
            </suggestionItems>
        </Input>

        <Label text="Description" labelFor="idDescriptionInput"/>
        <TextArea id="idDescriptionInput" placeholder="Enter Description ..." value="{/description}" width="100%" height="100px" liveChange=""/>

        <Label text="Source" labelFor="idSourceInput"/>
        <Input id="idSourceInput" placeholder="Enter Source ..." value="{/source}" liveChange=""
            showSuggestion="true"
            suggest="onHandleSuggest"
            suggestionItems="{/sources}">
            <suggestionItems>
                <core:Item text="{}" />
            </suggestionItems>
        </Input>
    </Panel>

</mvc:View>